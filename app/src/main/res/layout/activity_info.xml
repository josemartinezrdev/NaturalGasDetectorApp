        android:text="José García es un estudiante de electrónica en el colegio CASD José Prudencio Padilla, nacido en Barrancabermeja. A la edad de 16 años, tiene planes de terminar sus estudios y convertirse en arquitecto en un futuro."
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"

    <TextView

        android:id="@+id/textAA"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Álvaro Acosta es un especialista en informática y tecnólogo en electrónica, quien ejerció como coordinador del proyecto NGD-657. Con paciencia, guió a los autores de este proyecto, siempre incitándolos a continuar y sacar este proyecto adelante."
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

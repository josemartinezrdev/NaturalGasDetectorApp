    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/black"
    android:textAlignment="center"
    tools:context=".InfoActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:text="INFORMACIÓN"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.490"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />

    <Button

        android:id="@+id/listQ"

        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/redondo_15dp"
        android:backgroundTint="#252CD2"
        android:paddingStart="15dp"
        android:text="¿Qué es?"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348"></Button>

    <TextView

        android:id="@+id/textQ"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Es un sistema de seguridad que utiliza un sensor MQ-4 para detectar la presencia de gas natural y gas butano, emitiendo una alerta temprana en caso de fuga. El sistema cuenta con un monitoreo en tiempo real para la prevención de riesgos y protección de personas y propiedades."
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:padding="35dp"
        android:visibility="invisible"

        ></TextView>

    <Button

        android:id="@+id/listC"

        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/redondo_15dp"
        android:backgroundTint="#3781D8"
        android:paddingStart="15dp"
        android:text="¿Cómo funciona?"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469"></Button>

    <TextView

        android:id="@+id/textC"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El sistema de detección de gas utiliza un sensor MQ-4 para detectar gas natural y gas butano en una zona de riesgo. Cuando se detecta una fuga, se envía una señal de alerta  a un dispositivo móvil, para que las personas puedan evacuar el area de manera segura."
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:padding="35dp"
        android:visibility="invisible"
        ></TextView>

    <Button


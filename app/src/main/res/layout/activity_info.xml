        android:layout_height="wrap_content"
        android:text="José Martinez es uno de los autores del proyecto y se desempeña como desarrollador de la aplicación. Actualmente, es estudiante de electrónica y nació en la ciudad de Barrancabermeja. A sus 16 años, tiene aspiraciones de graduarse y posteriormente estudiar ingeniería de software y programación."
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:padding="35dp"
